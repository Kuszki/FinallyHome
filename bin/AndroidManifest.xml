<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.finallyhome"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PorchActivity"
            android:label="@string/title_activity_porch"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SalonActivity"
            android:label="@string/title_activity_salon"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ToiletActivity"
            android:label="@string/title_activity_toilet"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".KitchenActivity"
            android:label="@string/title_activity_kitchen"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".LightActivity"
            android:label="@string/title_activity_light"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".HeatingActivity"
            android:label="@string/title_activity_heating"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SetPreferenceActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
