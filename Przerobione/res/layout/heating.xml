<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HeatingActivity" >

    <TextView
        android:id="@+id/textView_heating"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:text="@string/heating_intensity"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textView_heating2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/actual_temperature"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editText_heating"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginTop="160dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="25sp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView_heating3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:text="Set temperature:"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonOkHeating"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="215dp"
        android:text="Ok" />

    <TextView
        android:id="@+id/textView_heating4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textSize="20sp" />

</FrameLayout>
