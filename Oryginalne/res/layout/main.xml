<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ic_background_main"
    android:columnCount="7"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/porch_button"
        android:layout_width="wrap_content"
        android:layout_height="289dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="fill_vertical"
        android:onClick="OpenPorchActivity"
        android:text="@string/PorchButton"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/cellar_button"
        android:layout_width="wrap_content"
        android:layout_height="163dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="310dp"
        android:onClick="OpenToiletActivity"
        android:text="@string/ToiletButton"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/kitchen_button"
        android:layout_width="235dp"
        android:layout_height="146dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="325dp"
        android:onClick="OpenKitchenActivity"
        android:text="@string/KitchenButton"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/porch_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/PorchButton"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/cellar_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="310dp"
        android:text="@string/ToiletButton"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/kitchen_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="325dp"
        android:text="@string/KitchenButton"
        android:textSize="25sp" />

    <Button
        android:id="@+id/salon_button"
        android:layout_width="232dp"
        android:layout_height="312dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="10dp"
        android:onClick="OpenSalonActivity"
        android:text="@string/SalonButton"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/salon_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="10dp"
        android:text="@string/SalonButton"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/ipSettings_edittext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/portSettings_edittext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/response"
        android:layout_width="286dp"
        android:layout_height="212dp"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:textColor="#F00"
        android:textSize="20sp" />

</FrameLayout>